# Catalog Service Environment Variables

# Application Settings
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://catalog_user:catalog_pass@postgres:5432/catalog_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis-cluster:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Cache TTL Settings (seconds)
CACHE_TTL_PRODUCTS=300
CACHE_TTL_CATEGORIES=1800
CACHE_TTL_PRODUCT_DETAIL=600

# CORS Settings
ALLOWED_ORIGINS=["http://frontend-service", "http://main-service", "http://localhost:3000", "http://localhost:3001"]

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Metrics Settings
METRICS_ENABLED=true
METRICS_PORT=9090

# AWS Settings (for image uploads)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=eks-msa-catalog-images