# Environment Variables for EKS MSA Learning Platform

# AWS 설정
AWS_REGION=ap-northeast-1
AWS_ACCOUNT_ID=your-account-id

# 프로젝트 설정
PROJECT_NAME=eks-msa-learning
ENVIRONMENT=dev

# 데이터베이스 설정 (실제 운영시에는 AWS Secrets Manager 사용)
DB_HOST=your-rds-endpoint
DB_PORT=5432
DB_NAME=msalearning
DB_USERNAME=dbadmin
DB_PASSWORD=your-secure-password

# Redis 설정
REDIS_HOST=your-redis-endpoint
REDIS_PORT=6379

# S3 설정
S3_BUCKET_NAME=your-s3-bucket-name

# EFS 설정
EFS_ID=your-efs-id

# 모니터링 설정
GRAFANA_ADMIN_PASSWORD=admin123!

# Slack 알림 설정 (선택사항)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#alerts